{
  "name": "nx-projects",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "codeowners": {
      "executor": "@swapnil/tools:codeowners",
      "options": {
        "reviewers": [
          "swapniltech0390",
          "jainswapnil420"
        ],
        "sources": ["apps","libs"]
      }
    }
  }
}